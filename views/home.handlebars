<div class='form' id='main'>
    <div id='form_type'>
        <h3>Registration</h3>
    </div>
    <div class="mb-5" id='form' >
        <form method="POST" action="/confirmation">
            <label class="form-label">Name</label>
            <input type="text" placeholder="Name" class="form-control " required name="Name" value="">
			
            <label class="form-label">Email:</label>
            <input type="email" placeholder="Email" class="form-control" required name="Email" value="">
            
            <label class="form-label">Contact No.</label>
			<input type="tel" placeholder="Contact_no" class="form-control" required pattern="[0-9]{10}" maxlength="10" minlength="10" name="Contactno" value="">
			
            <label class="form-label">DOB:</label>
			<input type="date" placeholder="DOB"  class="form-control" required name="DOB" value="">
            
            <label class="form-label">Address:</label>
            <input type="text" placeholder="address"  class="form-control" required name="Address" value="">
            <div id="button" >
                <button type="submit" class="btn btn-primary" id='btn1'>Submit</button>
                <button type="reset" class="btn btn-primary" id='btn2'>Reset</button>
                
            </div>
            <a href="/show_data">retrieve data</a>
            
        </form>
    </div>
</div>